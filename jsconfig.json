{
    "compilerOptions": {
        "baseUrl": ".",
        "checkJs": false,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "maxNodeModuleJsDepth": 0,
        "target": "es6",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": [
        "node_modules", "build", "dist", "scripts/flatpak/.flatpak-builder",
        "scripts/flatpak/build-dir", "scripts/flatpak/repo"
    ]
}
